<h1>Редактировать {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">        
        <input type="text" id="title" class="validate" name="title" required value={{course.title}}> 
        <label for="title">Введите название</label>
        <span class="helper-text" data-error="Вы не ввели название"></span>
    </div>

    <div class="input-field">        
        <input type="number" id="price" class="validate" name="price" required min="1" value={{course.price}}>
        <label for="price">Введите цену</label>
        <span class="helper-text" data-error="Вы не ввели цену"></span>
    </div>

    <div class="input-field">        
        <input type="text" id="img" class="validate" name="img" required value={{course.img}}>
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Вы не ввели URL картинки"></span>
    </div>

<input type="hidden" name="id" value="{{course.id}}">

<button type="submit" class="btn btn-primary">Редактировать</button>
</form>